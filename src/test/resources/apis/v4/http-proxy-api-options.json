{
    "id": "my-http-proxy-api-options",
    "name": "my-http-proxy-api-options",
    "gravitee": "4.0.0",
    "type": "proxy",
    "listeners": [
        {
            "type": "http",
            "paths": [
                {
                    "path": "/http-proxy-api-options"
                }
            ],
            "entrypoints": [
                {
                    "type": "http-proxy"
                }
            ]
        }
    ],
    "endpointGroups": [
        {
            "name": "default-group",
            "type": "http-proxy",
            "endpoints": [
                {
                    "name": "default",
                    "type": "http-proxy",
                    "weight": 1,
                    "inheritConfiguration": false,
                    "configuration": {
                        "target": "http://localhost:8080/endpoint"
                    },
                    "sharedConfigurationOverride": {
                        "http": {
                            "connectTimeout": 3000,
                            "readTimeout": 60000
                        }
                    }
                }
            ]
        }
    ],
    "flows": [
        {
            "name": "flow-1",
            "enabled": true,
            "selectors": [
                {
                    "type": "http",
                    "path": "/",
                    "pathOperator": "START_WITH",
                    "methods": ["POST"]
                }
            ],
            "request": [
                {
                    "name": "Json to Toon",
                    "enabled": true,
                    "policy": "json-to-toon",
                    "configuration": {
                        "conversion": "JSON_TO_TOON",
                        "delimiter": "PIPE"
                    }
                }
            ],
            "response": [
                {
                    "name": "Toon to Json",
                    "enabled": true,
                    "policy": "json-to-toon",
                    "configuration": {
                        "conversion": "TOON_TO_JSON",
                        "delimiter": "PIPE"
                    }
                }
            ]
        }
    ],
    "analytics": {
        "enabled": false
    }
}
